<div class="contents row">
  <div class="container">
    <h1>ログイン</h1>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

    <%= render 'shared/error_message', model: f.object %>
    
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>